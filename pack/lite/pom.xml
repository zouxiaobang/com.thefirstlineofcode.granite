<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>com.firstlinecode.granite</groupId>
		<artifactId>granite-pack</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	
	<groupId>com.firstlinecode.granite.pack</groupId>
	<artifactId>granite-pack-lite</artifactId>
	<name>Granite deploy lite packer</name>
	
	<dependencies>
		<!-- System Libraries -->
		<dependency>
			<groupId>com.firstlinecode.granite</groupId>
			<artifactId>granite-server</artifactId>
		</dependency>
		
		<!-- Framework -->
		<dependency>
			<groupId>com.firstlinecode.granite.framework</groupId>
			<artifactId>granite-framework-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.framework.adf</groupId>
			<artifactId>granite-framework-adf-mybatis</artifactId>
		</dependency>
		
		<!-- Pipelines -->
		<dependency>
			<groupId>com.firstlinecode.granite.pipelines</groupId>
			<artifactId>granite-pipelines-stream</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.pipelines</groupId>
			<artifactId>granite-pipelines-parsing</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.pipelines</groupId>
			<artifactId>granite-pipelines-processing</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.pipelines</groupId>
			<artifactId>granite-pipelines-routing</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.pipelines</groupId>
			<artifactId>granite-pipelines-event</artifactId>
		</dependency>
		
		<!-- Standard Stream Plugin -->
		<dependency>
			<groupId>com.firstlinecode.granite.stream</groupId>
			<artifactId>granite-stream-standard</artifactId>
		</dependency>
		
		<!-- XEPs Plugins -->
		<dependency>
			<groupId>com.firstlinecode.granite.xeps</groupId>
			<artifactId>granite-xeps-ibr</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.xeps</groupId>
			<artifactId>granite-xeps-ping</artifactId>
		</dependency>
		
		<!-- Deploy Lite Plugins -->
		<dependency>
			<groupId>com.firstlinecode.granite.lite</groupId>
			<artifactId>granite-lite-dba</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.lite</groupId>
			<artifactId>granite-lite-session</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.lite</groupId>
			<artifactId>granite-lite-pipeline</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.lite</groupId>
			<artifactId>granite-lite-auth</artifactId>
		</dependency>
		<dependency>
			<groupId>com.firstlinecode.granite.lite.xeps</groupId>
			<artifactId>granite-lite-xeps-ibr</artifactId>
		</dependency>
		
		<!-- Gem plugins -->
		<dependency>
			<groupId>com.firstlinecode.gem.server</groupId>
			<artifactId>gem-server-bxmpp</artifactId>
		</dependency>
		
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.firstlinecode.granite.pack.lite.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
