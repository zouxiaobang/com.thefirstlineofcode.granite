<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:thefirstlineofcode="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.thefirstlineofcode.granite</groupId>
		<artifactId>com.thefirstlineofcode.granite</artifactId>
		<version>1.0.0-ALPHA1</version>
		<relativePath>../pom.xml</relativePath>
	</parent>	
	
	<groupId>com.thefirstlineofcode.granite</groupId>
	<artifactId>granite-server</artifactId>
	<name>Granite Server Implementation</name>
	
	<properties>
		<main.class>com.thefirstlineofcode.granite.server.Main</main.class>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<classpathPrefix>libs/</classpathPrefix>
							<mainClass>${main.class}</mainClass>
						</manifest>
					</archive>
					<excludes>
						<exclude>META-INF/extensions.idx</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptors>
						<descriptor>src/assembly/descriptor.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>com.thefirstlineofcode.granite.pipeline.stages</groupId>
			<artifactId>granite-pipeline-stages-stream</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thefirstlineofcode.granite.pipeline.stages</groupId>
			<artifactId>granite-pipeline-stages-parsing</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thefirstlineofcode.granite.pipeline.stages</groupId>
			<artifactId>granite-pipeline-stages-processing</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thefirstlineofcode.granite.pipeline.stages</groupId>
			<artifactId>granite-pipeline-stages-routing</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thefirstlineofcode.granite.pipeline.stages</groupId>
			<artifactId>granite-pipeline-stages-event</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thefirstlineofcode.granite.framework.adf</groupId>
			<artifactId>granite-framework-adf-spring</artifactId>
		</dependency>
		
	</dependencies>
	
</project>

